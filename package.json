{
  "name": "identity-reconciliation",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply id-rec --local",
    "db:migrate:remote": "wrangler d1 migrations apply id-rec --remote",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.26",
    "@types/node": "^24.9.2",
    "drizzle-kit": "^0.31.6",
    "vite": "^7.1.12",
    "vitest": "^2.1.8",
    "wrangler": "^4.4.0"
  }
}